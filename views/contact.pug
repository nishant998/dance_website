extends base.pug

block scripts 
    script(src='/static/index.js')
block style
    style
        include ../static/style.css 
        include ../static/stylecontact.css      
block content
    div#container 
        h3 Contact form
            form(action='/contact', method = "post")
                input(type = "text" , name= "name" , placeholder = "Enter your Name" class = "formclass")
                input(type = "email" , name= "Email" , placeholder = "Enter your Email" class = "formclass")
                input(type = "password" , name= "Password" , placeholder = "Enter your Password" class = "formclass")
                input(type = "text" , name= "DanSty" , placeholder = "Enter your favourite dance style" class = "formclass")
                input(type = "submit" , class = "btn")
